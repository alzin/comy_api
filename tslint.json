{
    "defaultSeverity": "error",
    "extends": ["tslint:recommended"],
    "jsRules": {},
    "rules": {
        "no-console": false,
        "ordered-imports": false,
        "no-unused-expression": false,
        "no-shadowed-variable": false,
        "no-var-requires": false,
        "quotemark": [true, "single", "avoid-escape"],
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "always",
                    "arrays": "always",
                    "functions": "never",
                    "typeLiterals": "ignore"
                },
                "esSpecCompliant": true
            }
        ]
    },
    "rulesDirectory": []
}
